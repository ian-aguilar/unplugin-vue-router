{
  "include": [
    "./src/**/*.ts",
    "./src/*.d.ts",
    "./tests,"
  ],
  "exclude": [
    "./client.d.ts",
    "./src/**/*.test-d.ts",
    "node_modules",
    "dist"
  ],
  "compilerOptions": {
    "target": "ES2021",
    "module": "esnext",
    "lib": [
      "esnext",
      "DOM"
    ],
    "paths": {
      "~/*": [
        "./*"
      ],
    },
    "moduleResolution": "Bundler",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "strict": true,
    "strictNullChecks": true,
    "resolveJsonModule": true,
    "types": [
      "node",
      "vite/client"
    ]
  }
}
